<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.qflow.main.views.fragments.LoginFragment"
        android:label="login_fragment"
        tools:layout="@layout/fragment_login"
        app:startDestination="@id/action_loginFragment_to_profileFragment">
        <action
            android:id="@+id/action_loginFragment_to_profileFragment"
            app:destination="@id/profileFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />
        <action
            android:id="@+id/action_loginFragment_to_signUpFragment"
            app:destination="@+id/SignUpFragment" />
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.qflow.main.views.fragments.ProfileFragment"
        android:label="profile_fragment"
        tools:layout="@layout/profile_fragment">
        <argument
            android:name="userId"
            app:argType="string" />
        <action
            android:id="@+id/action_profileFragment_to_Qr_fragment"
            app:destination="@id/QrFragment"
            app:enterAnim="@anim/nav_default_pop_enter_anim" />
        <action
            android:id="@+id/action_profileFragment_to_codeFragment"
            app:destination="@id/codeFragment"
            app:enterAnim="@anim/nav_default_pop_enter_anim" />
    </fragment>
    <fragment
        android:id="@+id/SignUpFragment"
        android:name="com.qflow.main.views.fragments.SignUpFragment"
        android:label="SignUpFragment"
        tools:layout="@layout/fragment_signup">
        <action
            android:id="@+id/action_signUpFragment_to_profileFragment"
            app:destination="@id/profileFragment"
            app:enterAnim="@anim/nav_default_enter_anim" />
    </fragment>
    <fragment
        android:id="@+id/QrFragment"
        android:label="qr_fragment"
        tools:layout="@layout/qr_fragment">
        <action
            android:id="@+id/action_Qr_fragment_to_profileFragment"
            app:destination="@id/profileFragment" />
    </fragment>
    <fragment
        android:id="@+id/codeFragment"
        android:label="code_fragment"
        tools:layout="@layout/code_fragment">
        <action
            android:id="@+id/action_codeFragment_to_profileFragment"
            app:destination="@id/profileFragment"
            app:enterAnim="@anim/nav_default_pop_enter_anim" />
    </fragment>
</navigation>