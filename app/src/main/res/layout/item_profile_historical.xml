<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryLightColor"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/scroll_historical"
        android:layout_width="match_parent"
        android:layout_height="111dp"
        android:scrollbarThumbHorizontal="@color/primaryDarkColor"
        android:scrollbarThumbVertical="@color/primaryDarkColor"
        android:scrollbars="horizontal|vertical">

        <LinearLayout
            android:id="@+id/historical_layout"
            android:layout_width="match_parent"
            android:layout_height="129dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
           >

            <TextView
                android:id="@+id/queue"
                android:layout_width="400dp"
                android:layout_height="100dp"
                android:layout_gravity="center|start|top|fill_vertical"
                android:layout_marginLeft="10dp"
                android:background="@color/primaryTextColor"
                android:paddingLeft="10dp"
                android:scrollbarThumbHorizontal="@color/primaryDarkColor"
                android:scrollbarThumbVertical="@color/primaryDarkColor"></TextView>
        </LinearLayout>
    </ScrollView>

</LinearLayout>