<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.fragments.LoginFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/imageView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="16dp"
            android:src="@drawable/girl_too_close"
            app:layout_constraintBottom_toTopOf="@id/loginApprender"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/signUp"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:minWidth="150dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/login_button_selector"
            android:drawablePadding="-35dp"
            android:fontFamily="@font/roboto"
            android:maxWidth="150dp"
            android:text="@string/sign_in"
            android:textAllCaps="false"
            android:textColor="#0E0C0C"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/loginApprender" />

        <Button
            android:id="@+id/signIn"
            android:layout_width="0dp"
            android:layout_height="41dp"
            android:minWidth="150dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/login_button_selector"
            android:drawablePadding="-35dp"
            android:fontFamily="@font/roboto"
            android:maxWidth="150dp"
            android:text="@string/sign_up"
            android:textAllCaps="false"
            android:textColor="#0E0C0C"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/loginApprender" />

        <Button
            android:id="@+id/loginApprender"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/login_button_selector"
            android:drawableStart="@drawable/icon_apprender_wrappable"
            android:drawablePadding="-35dp"
            android:fontFamily="@font/roboto"
            android:text="@string/loginApprender"
            android:textAllCaps="false"
            app:layout_constraintBottom_toTopOf="@+id/signUp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>